<div class="card">
  <div class="card-body">
    <form class="forms-sample" onsubmit="couponAdder(event)">
      <div class="form-group">
        <label>Coupon Code</label>
        <input name="code" type="text" class="form-control" placeholder="Enter coupon code">
        <small class="text-danger validation-message"></small>
      </div>
      <div class="form-group">
        <label>Discount Value</label>
        <input name="discountValue" type="number" class="form-control" placeholder="Enter discount percentage" step="0.01">
        <small class="text-danger validation-message"></small>
      </div>
      <div class="form-group">
        <label>Minimum Purchase Amount</label>
        <input name="minPurchase" type="number" class="form-control" placeholder="Enter minimum purchase amount" step="0.01">
        <small class="text-danger validation-message"></small>
      </div>
      <div class="form-group">
        <label>Start Date</label>
        <input name="startDate" type="date" class="form-control" id="startDate">
        <small class="text-danger validation-message"></small>
      </div>
      <div class="form-group">
        <label>End Date</label>
        <input name="endDate" type="date" class="form-control" id="endDate">
        <small class="text-danger validation-message"></small>
      </div>
      <div class="form-group">
        <label>Usage Limit</label>
        <input name="usageLimit" type="number" class="form-control" placeholder="Enter usage limit">
        <small class="text-danger validation-message"></small>
      </div>
      <div class="form-group">
        <label>Applicable Categories</label>
        <select class="form-control" name="applicableCategories">
         
          <% console.log('Available categories:', categories); %>
          <% categories.forEach(category => { %>
            <option value="<%= category._id %>"><%= category.name %></option>
          <% }); %>
        </select>
        <small class="text-danger validation-message"></small>
      </div>
      <button type="submit" class="btn btn-primary mr-2">Submit</button>
      <p id="errp" style="color: red;"></p>
    </form>
  </div>
</div>

