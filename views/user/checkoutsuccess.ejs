<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Successful!</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background: #f0f2f5;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .success-card {
            background: white;
            padding: 4rem 6rem;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            text-align: center;
            position: relative;
            overflow: hidden;
            transform: scale(0);
            animation: scaleUp 0.6s cubic-bezier(0.68, -0.55, 0.27, 1.55) forwards;
        }

        .checkmark {
            width: 80px;
            height: 80px;
            background: #4CAF50;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 2rem;
            position: relative;
        }

        .checkmark::before {
            content: '';
            width: 30px;
            height: 60px;
            border: solid white;
            border-width: 0 5px 5px 0;
            transform: rotate(45deg);
            position: absolute;
            top: 5px;
            animation: checkmark 0.6s cubic-bezier(0.68, -0.55, 0.27, 1.55) forwards;
        }

        h1 {
            color: #2f2f2f;
            margin-bottom: 1rem;
            opacity: 0;
            animation: fadeIn 0.5s ease forwards 0.4s;
        }

        p {
            color: #666;
            margin-bottom: 2rem;
            line-height: 1.6;
            opacity: 0;
            animation: fadeIn 0.5s ease forwards 0.6s;
        }

        .order-details {
            background: #f8f9fa;
            padding: 1.5rem;
            border-radius: 10px;
            margin: 2rem 0;
            opacity: 0;
            animation: fadeIn 0.5s ease forwards 0.8s;
        }

        .continue-btn {
            background: #4CAF50;
            color: white;
            border: none;
            padding: 1rem 2.5rem;
            border-radius: 30px;
            font-size: 1rem;
            cursor: pointer;
            transition: transform 0.3s ease;
            opacity: 0;
            animation: fadeIn 0.5s ease forwards 1s;
        }

        .continue-btn:hover {
            transform: translateY(-3px);
        }

        .confetti {
            position: absolute;
            width: 10px;
            height: 10px;
            background: #ff0000;
            pointer-events: none;
        }

        @keyframes scaleUp {
            to {
                transform: scale(1);
            }
        }

        @keyframes checkmark {
            0% {
                transform: scale(0) rotate(45deg);
            }
            50% {
                transform: scale(1.2) rotate(45deg);
            }
            100% {
                transform: scale(1) rotate(45deg);
            }
        }

        @keyframes fadeIn {
            to {
                opacity: 1;
            }
        }
    </style>
</head>
<body>
    <div class="success-card">
        <div class="checkmark"></div>
        <h1>Order Placed Successfully! ðŸŽ‰</h1>
        <div class="order-details">
            <p>Order ID: <%=id%></p>
           
        </div>

        <button class="continue-btn" onclick="window.location.href='/user/shop'">Continue Shopping</button>
    </div>

    <script>
        // Create confetti effect
        function createConfetti() {
            const colors = ['#ff0000', '#00ff00', '#0000ff', '#ffff00', '#ff00ff'];
            for (let i = 0; i < 50; i++) {
                const confetti = document.createElement('div');
                confetti.className = 'confetti';
                confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                confetti.style.left = Math.random() * 100 + '%';
                confetti.style.top = Math.random() * 100 + '%';
                confetti.style.transform = `rotate(${Math.random() * 360}deg)`;
                
                const animation = confetti.animate([
                    { transform: 'translate(0, 0) rotate(0deg)', opacity: 1 },
                    { transform: `translate(${Math.random() * 200 - 100}px, ${Math.random() * 200 - 100}px) rotate(${Math.random() * 360}deg)`, opacity: 0 }
                ], {
                    duration: 1000 + Math.random() * 1000,
                    easing: 'cubic-bezier(0.25, 0.46, 0.45, 0.94)'
                });

                document.body.appendChild(confetti);
                animation.onfinish = () => confetti.remove();
            }
        }

        // Trigger animations on page load
        window.addEventListener('load', () => {
            createConfetti();
        });
    </script>
</body>
</html>