document.addEventListener('DOMContentLoaded', async () => {
    try {
        const response = await fetch('/user/wishlist/check', { method: 'GET' });
        if (response.ok) {
            const wishlistProducts = await response.json();
            
            // Get all wishlist icons on the page
            const wishlistIcons = document.querySelectorAll('.wishlist-icon');
            
            wishlistIcons.forEach(icon => {
                const productId = icon.dataset.productId;
                // Check if this product is in the wishlist
                if (wishlistProducts.includes(productId)) {
                    // Add active class to the icon container
                    icon.classList.add('active');
                    // Update the heart icon
                    const heartIcon = icon.querySelector('i');
                    if (heartIcon) {
                        heartIcon.classList.remove('zmdi-favorite-outline');
                        heartIcon.classList.add('zmdi-favorite');
                    }
                }
            });
        }
    } catch (error) {
        console.error('Error checking wishlist status:', error);
    }
});

async function SFSP(page = 1) {
    const search = document.getElementById('searchInput').value;
    const filter = document.getElementById('categorySelect').value;
    const sort = document.getElementById('sortSelect').value;

    // Get the container and add loading state
    const productContainer = document.querySelector('.showcat');
    productContainer.classList.add('products-container', 'fade-transition', 'loading');

    // Add loading overlay if it doesn't exist
    let loadingOverlay = productContainer.querySelector('.loading-overlay');
    if (!loadingOverlay) {
        loadingOverlay = document.createElement('div');
        loadingOverlay.className = 'loading-overlay';
        loadingOverlay.innerHTML = '<div class="loading-spinner"></div>';
        productContainer.appendChild(loadingOverlay);
    }
    loadingOverlay.style.display = 'flex';

    try {
        // Add a small delay to ensure smooth transition
        await new Promise(resolve => setTimeout(resolve, 300));

        const response = await fetch(`/user/search?search=${search}&filter=${filter}&sort=${sort}&page=${page}`);
        const data = await response.json();
        
        // Prepare the new content
        const newContent = data.products.map(product => {
            const discountedPrice = product.offer ? 
                Math.floor(product.price - (product.price * product.offer / 100)) : 
                product.price;
            
            return `
                <div class="singprod tab-pane active single-product col-xl-3 col-lg-4 col-md-6"
                    data-price="${product.price}"
                    data-name="${product.name}">
                    <div class="product-img">
                        <a href="/user/product/${product.name}">
                            <img src="${product.image}" alt="${product.name}" />
                        </a>
                        <div class="product-action clearfix">
                            <a href="javascript:void(0)" 
                                onclick="toggleWishlist(this, '${product._id}')" 
                                class="wishlist-icon" 
                                data-product-id="${product._id}">
                                <i class="zmdi zmdi-favorite-outline"></i>
                            </a>
                            <a href="#" data-bs-toggle="modal" data-bs-target="#productModal" title="Quick View">
                                <i class="zmdi zmdi-zoom-in"></i>
                            </a>
                            <a href="#" data-bs-toggle="tooltip" data-placement="top" title="Compare">
                                <i class="zmdi zmdi-refresh"></i>
                            </a>
                            <a href="cart.html" data-bs-toggle="tooltip" data-placement="top" title="Add To Cart">
                                <i class="zmdi zmdi-shopping-cart-plus"></i>
                            </a>
                        </div>
                    </div>
                    <div class="product-info clearfix">
                        <div class="fix">
                            <h4 class="post-title floatleft">
                                <a href="/user/product/${product.name}">${product.name}</a>
                            </h4>
                        </div>
                        <div class="fix">
                            ${product.offer ? `
                                <span class="pro-price floatleft">â‚¹${discountedPrice}</span>
                                <span class="original-price floatleft">â‚¹${Math.floor(product.price)}</span>
                            ` : `
                                <span class="pro-price floatleft">â‚¹${Math.floor(product.price)}</span>
                            `}
                            <span class="pro-rating floatright">
                                <a href="#"><i class="zmdi zmdi-star"></i></a>
                                <a href="#"><i class="zmdi zmdi-star"></i></a>
                                <a href="#"><i class="zmdi zmdi-star"></i></a>
                                <a href="#"><i class="zmdi zmdi-star-half"></i></a>
                                <a href="#"><i class="zmdi zmdi-star-half"></i></a>
                            </span>
                        </div>
                    </div>
                </div>
            `;
        }).join('');

        // Update the content
        productContainer.innerHTML = newContent;
        
        // Update pagination
        updatePagination(data.pagination);

    } catch (error) {
        console.error('Error fetching search results:', error);
        productContainer.innerHTML = '<div class="col-12 text-center">Error loading products</div>';
    } finally {
        // Remove loading state
        productContainer.classList.remove('loading');
        if (loadingOverlay) {
            loadingOverlay.style.display = 'none';
        }
    }
}

// Helper function to update pagination
function updatePagination(pagination) {
    const paginationContainer = document.querySelector('.pagination');
    if (!paginationContainer) return;

    let paginationHTML = `
        <li class="prev ${pagination.currentPage === 1 ? 'disabled' : ''}">
            <a href="#" onclick="SFSP(${pagination.currentPage - 1}); return false;" aria-label="Previous">â€¹</a>
        </li>
    `;

    for (let i = 1; i <= pagination.totalPages; i++) {
        paginationHTML += `
            <li class="${pagination.currentPage === i ? 'active' : ''}">
                <a href="#" onclick="SFSP(${i}); return false;">${i}</a>
            </li>
        `;
    }

    paginationHTML += `
        <li class="next ${pagination.currentPage === pagination.totalPages ? 'disabled' : ''}">
            <a href="#" onclick="SFSP(${pagination.currentPage + 1}); return false;" aria-label="Next">â€º</a>
