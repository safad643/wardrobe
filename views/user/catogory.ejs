<script>
// Initialize the page when it loads
document.addEventListener('DOMContentLoaded', function() {
    // Get URL parameters
    const urlParams = new URLSearchParams(window.location.search);
    
    // Set search input if present in URL
    const searchParam = urlParams.get('search');
    if (searchParam && document.getElementById('searchInput')) {
        document.getElementById('searchInput').value = searchParam;
    }
    
    // Set category dropdown if present in URL
    const categoryParam = urlParams.get('category');
    if (categoryParam && document.getElementById('categorySelect')) {
        document.getElementById('categorySelect').value = categoryParam;
    }
    
    // Set sort dropdown if present in URL
    const sortParam = urlParams.get('sort');
    if (sortParam && document.getElementById('sortSelect')) {
        document.getElementById('sortSelect').value = sortParam;
    }
    
    // Get page if present in URL
    const pageParam = urlParams.get('page');
    const page = pageParam ? parseInt(pageParam) : 1;
    
    // Load products with these filters
    SFSP(page);
});

async function SFSP(page = 1) {
    const search = document.getElementById('searchInput') ? document.getElementById('searchInput').value : '';
    const filter = document.getElementById('categorySelect').value;
    const sort = document.getElementById('sortSelect').value;
    const limit = 8; // Set limit to 8 products per page

    // Update URL with current parameters for shareable links
    updateURL(search, filter, sort, page);

    // Get the container and add loading state
    const productContainer = document.querySelector('.showcat');
    productContainer.classList.add('products-container', 'fade-transition', 'loading');

    // Add loading overlay if it doesn't exist
    let loadingOverlay = productContainer.querySelector('.loading-overlay');
    if (!loadingOverlay) {
        loadingOverlay = document.createElement('div');
        loadingOverlay.className = 'loading-overlay';
        loadingOverlay.innerHTML = '<div class="loading-spinner"></div>';
        productContainer.appendChild(loadingOverlay);
    }
    loadingOverlay.style.display = 'flex';

    try {
        // Add a small delay to ensure smooth transition
        await new Promise(resolve => setTimeout(resolve, 300));

        // Add limit parameter to fetch request
        const response = await fetch(`/user/search?search=${search}&filter=${filter}&sort=${sort}&page=${page}&limit=${limit}`);
        
        // Check if response is actually JSON
        const contentType = response.headers.get('content-type');
        if (!contentType || !contentType.includes('application/json')) {
            console.error('Error: Expected JSON response but received:', contentType);
            const text = await response.text();
            console.error('First 100 characters of response:', text.substring(0, 100));
            
            // Handle non-JSON response gracefully - show error to user
            productContainer.innerHTML = '<div class="col-12 text-center">Error loading products. Please refresh the page or try again later.</div>';
            document.querySelector('.pagination').innerHTML = '';
            
            // Remove loading state
            productContainer.classList.remove('loading');
            if (loadingOverlay) {
                loadingOverlay.style.display = 'none';
            }
            return; // Exit the function
        }
        
        const data = await response.json();
        
        // Validate pagination - if currentPage exceeds totalPages, redirect to last valid page
        if (data.pagination && data.pagination.currentPage > data.pagination.totalPages && data.pagination.totalPages > 0) {
            // Redirect to the last valid page
            SFSP(data.pagination.totalPages);
            return;
        }
        
        // Check if there are no products to display
        if (!data.products || data.products.length === 0) {
            productContainer.innerHTML = `
                <div class="col-12 no-results-container">
                    <div class="no-results-content">
                        <i class="fas fa-search" style="font-size: 48px; color: #ccc; margin-bottom: 20px;"></i>
                        <h3>No products found</h3>
                        <p>We couldn't find any products matching your search criteria.</p>
                    </div>
                </div>
            `;
            
            // Clear pagination when no results
            document.querySelector('.pagination').innerHTML = '';
            return;
        }
        
        // Prepare the new content
        const newContent = data.products.map(product => {
            const discountedPrice = product.offer ? 
                Math.floor(product.price - (product.price * product.offer / 100)) : 
                product.price;
            
            return `
                <div class="singprod tab-pane active single-product col-xl-3 col-lg-4 col-md-6"
                    data-price="${product.price}"
                    data-name="${product.name}">
                    <div class="product-img">
                        <a href="/user/product/${product.name}">
                            <img src="${product.image}" alt="${product.name}" />
                        </a>
                    </div>
                    <div class="product-info clearfix">
                        <div class="fix">
                            <h4 class="post-title floatleft">
                                <a href="/user/product/${product.name}">${product.name}</a>
                            </h4>
                        </div>
                        <div class="fix">
                            ${product.offer ? `
                                <span class="pro-price floatleft">₹${discountedPrice}</span>
                                <span class="original-price floatleft">₹${Math.floor(product.price)}</span>
                            ` : `
                                <span class="pro-price floatleft">₹${Math.floor(product.price)}</span>
                            `}
                            <span class="pro-rating floatright">
                                <a href="#"><i class="zmdi zmdi-star"></i></a>
                                <a href="#"><i class="zmdi zmdi-star"></i></a>
                                <a href="#"><i class="zmdi zmdi-star"></i></a>
                                <a href="#"><i class="zmdi zmdi-star-half"></i></a>
                                <a href="#"><i class="zmdi zmdi-star-half"></i></a>
                            </span>
                        </div>
                    </div>
                </div>
            `;
        }).join('');

        // Update the content
        productContainer.innerHTML = newContent;
        
        // Update pagination
        updatePagination(data.pagination);

    } catch (error) {
        console.error('Error fetching search results:', error);
        productContainer.innerHTML = '<div class="col-12 text-center">Error loading products</div>';
    } finally {
        // Remove loading state
        productContainer.classList.remove('loading');
        if (loadingOverlay) {
            loadingOverlay.style.display = 'none';
        }
    }
}

// Helper function to update pagination
function updatePagination(pagination) {
    const paginationContainer = document.querySelector('.pagination');
    if (!paginationContainer) return;

    // If no pages or invalid pagination, clear pagination
    if (!pagination.totalPages || pagination.totalPages === 0) {
        paginationContainer.innerHTML = '';
        return;
    }

    // Ensure currentPage is within valid range
    const currentPage = Math.min(Math.max(1, pagination.currentPage), pagination.totalPages);
    
    // If currentPage was corrected, update URL
    if (currentPage !== pagination.currentPage) {
        const search = document.getElementById('searchInput') ? document.getElementById('searchInput').value : '';
        const filter = document.getElementById('categorySelect').value;
        const sort = document.getElementById('sortSelect').value;
        updateURL(search, filter, sort, currentPage);
    }

    let paginationHTML = '';
    
    // Previous button - disabled on first page
    if (currentPage === 1) {
        paginationHTML += `
            <li class="prev disabled">
                <span aria-label="Previous" style="display: flex; align-items: center; justify-content: center; min-width: 40px; height: 40px; padding: 0 10px; border-radius: 8px; background-color: #fff; border: 1px solid #e0e0e0; color: #999; cursor: not-allowed;">‹</span>
            </li>
        `;
    } else {
        paginationHTML += `
            <li class="prev">
                <a href="#" onclick="SFSP(${currentPage - 1}); return false;" aria-label="Previous">‹</a>
            </li>
        `;
    }

    // Page numbers
    for (let i = 1; i <= pagination.totalPages; i++) {
        paginationHTML += `
            <li class="${currentPage === i ? 'active' : ''}">
                <a href="#" onclick="SFSP(${i}); return false;">${i}</a>
            </li>
        `;
    }

    // Next button - disabled on last page
    if (currentPage === pagination.totalPages) {
        paginationHTML += `
            <li class="next disabled">
                <span aria-label="Next" style="display: flex; align-items: center; justify-content: center; min-width: 40px; height: 40px; padding: 0 10px; border-radius: 8px; background-color: #fff; border: 1px solid #e0e0e0; color: #999; cursor: not-allowed;">›</span>
            </li>
        `;
    } else {
        paginationHTML += `
            <li class="next">
                <a href="#" onclick="SFSP(${currentPage + 1}); return false;" aria-label="Next">›</a>
            </li>
        `;
    }

    paginationContainer.innerHTML = paginationHTML;
}

function clearAllFilters() {
    // Reset category dropdown to "All Categories"
    document.getElementById('categorySelect').value = '';
    
    // Reset sort dropdown to "Default"
