<body>
   
    <div class="order-page-wrapper">
        <div class="order-container">
            <div class="left-section">
                <div class="order-header">
                    <h1 class="main-title">Order Details</h1>
                    
                    <div class="order-meta">
                        <div class="order-id">
                            <span class="label">Order ID:</span>
                            <span class="value">#<%= order._id.toString().slice(-6).toUpperCase() %></span>
                        </div>
                        <div class="order-date">
                            <span class="label">Ordered on:</span>
                            <span class="value"><%= new Date(order.createdAt).toLocaleDateString() %></span>
                        </div>
                    </div>
                    
                    <!-- Add Order Status Tracker -->
                    <div class="order-status-tracker" 
                        data-status="<%= order.item.status %>"
                        style="--progress-width: <%= 
                            order.item.status === 'pending' ? '15%' :
                            order.item.status === 'processing' ? '40%' :
                            order.item.status === 'shipped' ? '70%' :
                            order.item.status === 'delivered' ? '90%' :
                            order.item.status === 'cancelled' ? '0%' : '0%'
                        %>;">
                        <div class="status-step <%= order.item.status === 'cancelled' ? 'faded' : ((['pending', 'processing', 'shipped', 'delivered'].includes(order.item.status)) ? 'active' : '') %>">
                            <div class="status-icon">
                                <i class="fas fa-clipboard-check"></i>
                            </div>
                            <div class="status-label">Order Placed</div>
                        </div>
                        <div class="status-step <%= order.item.status === 'cancelled' ? 'faded' : ((['processing', 'shipped', 'delivered'].includes(order.item.status)) ? 'active' : '') %>">
                            <div class="status-icon">
                                <i class="fas fa-cog"></i>
                            </div>
                            <div class="status-label">Processing</div>
                        </div>
                        <div class="status-step <%= order.item.status === 'cancelled' ? 'faded' : ((['shipped', 'delivered'].includes(order.item.status)) ? 'active' : '') %>">
                            <div class="status-icon">
                                <i class="fas fa-truck"></i>
                            </div>
                            <div class="status-label">Shipped</div>
                        </div>
                        <div class="status-step <%= order.item.status === 'cancelled' ? 'faded' : (order.item.status === 'delivered' ? 'active' : '') %>">
                            <div class="status-icon">
                                <i class="fas fa-box-open"></i>
                            </div>
                            <div class="status-label">Delivered</div>
                        </div>
                        <% if (order.item.status === 'cancelled') { %>
                            <div class="status-step active cancelled">
                                <div class="status-icon">
                                    <i class="fas fa-times-circle"></i>
                                </div>
                                <div class="status-label">Cancelled</div>
                            </div>
                        <% } %>
                    </div>
                </div>

                <div class="product-section">
            
                        <div class="order-item">
                            <div class="product-gallery">
                                <div class="main-image-container">
                                    <div class="product-image-container">
                                        <img src="<%= order.item.product?.images?.[0] || '/images/placeholder.png' %>" 
                                             alt="Product Image" 
                                             class="product-image" 
                                             id="mainImage0">
                                    </div>
                                </div>
                                <div class="product-thumbnails">
                                    <% if (order.item.product?.images) { %>
                                        <% order.item.product.images.slice(0, 3).forEach((img, imgIndex) => { %>
                                            <img src="<%= img %>" 
                                                 alt="Product view <%= imgIndex + 1 %>" 
                                                 class="thumbnail <%= imgIndex === 0 ? 'active' : '' %>"
                                                 onclick="changeImage(this.src, 0)">
                                        <% }) %>
                                    <% } %>
                                </div>
                            </div>

                            <div class="product-info">
                                <h2 class="product-name"><%= order.item.product?.name || 'Product Name Unavailable' %></h2>
                                <div class="variant-info">
                                    <span class="variant-label">Size: <%= order.item.varient.size %></span>
                                    <span class="variant-label">Color: <%= order.item.varient.color %></span>
                                    <span class="quantity-label">Quantity: <%= order.item.quantity %></span>
                                </div>
                                <div class="price-info">
                                    <span class="current-price">₹<%= Math.floor(order.item.total) %></span>
                                    <span class="original-price">₹<%= Math.floor(order.item.subtotal) %></span>
                                    <% if (order.item.offer > 0) { %>
                                        <span class="discount-badge"><%= order.item.offer %>% OFF</span>
                                    <% } %>
                                </div>
                                <div class="product-details">
                                    <p class="description-text"><%= order.item.product?.descr || 'No description available' %></p>
                                </div>
                            </div>
                        </div>
                </div>
            </div>

            <div class="right-section">
                <div style="height:210px;margin-bottom:0" class="order-summary">
                    <h3 class="summary-title">Shipping Address</h3>
                    <div class="address-details">
                        <p><%= order.address.street %></p>
                        <p><%= order.address.city %>, <%= order.address.state %></p>
                        <p><%= order.address.country %>, <%= order.address.pincode %></p>
                        <p>Phone: <%= order.address.mobile %></p>
                    </div>
                </div>
                <div class="order-summary">
                    <h3 class="summary-title">Order Summary</h3>
                    <div class="summary-content">
                        <div class="summary-row">
                            <span><%= order.item.product.name %> (<%= order.item.varient.size %>/<%= order.item.varient.color %>)</span>
                            <span>₹<%= order.item.subtotal %></span>
                        </div>
                        <div class="summary-row">
                            <span>Subtotal</span>
                            <span>₹<%= order.item.subtotal %></span>
                        </div>
                        <% if (order.item.offer > 0) { %>
                            <div class="summary-row">
                                <span>Discount</span>
                                <span class="discount-amount">-₹<%= order.item.discount %></span>
                            </div>
                        <% } %>
                        <div class="summary-row">
                            <span>Delivery Charges</span>
                            <span>₹<%= order.item.delivery %></span>
                        </div>
                        <div class="summary-row total">
                            <span>Total Amount</span>
                            <span>₹<%= order.item.total %></span>
                        </div>
                    </div>
                </div>

                <% if (order.item.status === 'delivered') { %>
                    <% if (returnStatus === 'pending') { %>
                        <div class="return-status-message">
                            <i class="fas fa-clock text-warning"></i>
                            <p>Your request for returning this order is being processed. We'll let you know once it gets approved.</p>
                        </div>
                    <% } else if (returnStatus === 'rejected') { %>
                        <div class="return-status-message">
                            <i class="fas fa-times-circle text-danger"></i>
                            <p>Your return request has been rejected due to policy violations. If you think this was a mistake, please contact customer support.</p>
                        </div>
                    <% } else if (returnStatus === 'approved') { %>
                        <div class="return-status-message">
                            <i class="fas fa-check-circle text-success"></i>
                            <p>Your return request has been approved. The refund amount (excluding delivery fee) will be credited to your wallet within 2-3 business days.</p>
                        </div>
                    <% } else { %>
                        <button class="cancel-btn" data-bs-toggle="modal" data-bs-target="#returnModal">
                            <i class="fas fa-undo"></i> Return Order
                        </button>
                    <% } %>
                <% } else { %>
                    <button class="cancel-btn" data-bs-toggle="modal" data-bs-target="#cancelModal">
                        <i class="fas fa-times-circle"></i> Cancel Order
                    </button>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Cancel Modal -->
    <div class="modal fade" id="cancelModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Cancel Order</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to cancel this order? This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <form id="cancelOrderForm" action="/user/orders/<%= order._id %>/cancel?varient=<%= encodeURIComponent(JSON.stringify(order.item.varient)) %>&productid=<%= order.item.productId %>" method="POST">
                        <button type="submit" class="btn btn-danger">Confirm Cancellation</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Return Modal -->
    <div class="modal fade" id="returnModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Return Order</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Please select a reason for returning this order:</p>
                    
                    <div class="return-reason-section mb-3">
                        <select class="form-select" id="returnReason" onchange="toggleOtherReason()">
                            <option value="" selected disabled>Select a reason</option>
                            <option value="wrong_size">Wrong Size/Fit Issues</option>
                            <option value="defective">Defective/Damaged Product</option>
                            <option value="not_as_described">Product Not As Described</option>
                            <option value="wrong_item">Received Wrong Item</option>
                            <option value="other">Other</option>
                        </select>
                    </div>

                    <div id="otherReasonInput" class="mb-3" style="display: none;">
                        <textarea 
                            class="form-control" 
                            id="otherReasonText" 
                            rows="3" 
                            placeholder="Please specify your reason for return..."
                        ></textarea>
                       
                    </div>
                    <p id="otherReasonTextError" class="error-message" style="display: none; color: #dc3545; font-size: 0.875rem; margin-top: 0.5rem; font-weight: 500;"></p>
                    <p class="text-danger mt-3"><small>Note: Delivery charges will not be refunded.</small></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button onclick="returnOrder()" type="submit" class="btn btn-warning">Request Return</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function changeImage(src, index) {
            document.getElementById(`mainImage${index}`).src = src;
            const thumbnails = document.querySelectorAll(`.product-gallery:nth-child(${index + 1}) .thumbnail`);
            thumbnails.forEach(thumb => {
                thumb.classList.remove('active');
                if (thumb.src === src) {
                    thumb.classList.add('active');
                }
            });
        }

        document.addEventListener('DOMContentLoaded', function() {
            const menuToggle = document.querySelector('.menu-toggle');
            const mainNav = document.getElementById('main-nav');
            const dropdowns = document.querySelectorAll('.dropdown');

            menuToggle.addEventListener('click', function() {
                this.classList.toggle('active');
                mainNav.classList.toggle('active');
                
                if(this.classList.contains('active')) {
                    this.children[0].style.transform = 'rotate(45deg) translate(6px, 6px)';
                    this.children[1].style.opacity = '0';
                    this.children[2].style.transform = 'rotate(-45deg) translate(6px, -6px)';
                    document.body.style.overflow = 'hidden';
                } else {
                    this.children[0].style.transform = 'none';
                    this.children[1].style.opacity = '1';
                    this.children[2].style.transform = 'none';
                    document.body.style.overflow = '';
                }
            });

            dropdowns.forEach(dropdown => {
                const link = dropdown.querySelector('a');
                link.addEventListener('click', function(e) {
                    if(window.innerWidth <= 992) {
                        e.preventDefault();
                        dropdown.classList.toggle('active');
                        const content = dropdown.querySelector('.dropdown-content');
                        content.style.display = dropdown.classList.contains('active') ? 'block' : 'none';
                    }
                });
            });

            document.addEventListener('click', function(e) {
                if(!mainNav.contains(e.target) && !menuToggle.contains(e.target) && window.innerWidth <= 992) {
                    mainNav.classList.remove('active');
                    menuToggle.classList.remove('active');
                    menuToggle.children[0].style.transform = 'none';
                    menuToggle.children[1].style.opacity = '1';
                    menuToggle.children[2].style.transform = 'none';
                    document.body.style.overflow = '';
                }
            });

            // Add status tracker animation
            const tracker = document.querySelector('.order-status-tracker');
            const steps = tracker.querySelectorAll('.status-step');
            const status = tracker.dataset.status;
            
            const statusOrder = ['pending', 'processing', 'shipped', 'delivered'];
            const currentStatusIndex = statusOrder.indexOf(status);
            
            const totalNodes = steps.length - 1;
            const animationDuration = 3000;
            
            steps.forEach((step, index) => {
                step.classList.remove('active');
                
                if (status === 'cancelled') {
                    if (index === steps.length - 1) {
                        setTimeout(() => {
                            step.classList.add('active');
                            step.style.opacity = '1';
                        }, 3000);
                    }
                } else if (index <= currentStatusIndex) {
                    // Calculate when the line reaches the left edge of the node
                    const nodePosition = (index - 0.32) / totalNodes; // Subtract 0.1 to trigger slightly earlier
                    const nodeActivationTime = Math.max(0, animationDuration * nodePosition);
                    
                    setTimeout(() => {
                        step.classList.add('active');
                        step.style.opacity = '1';
                    }, nodeActivationTime);
                }
            });

            // Add form submission handler for cancel order
            const cancelOrderForm = document.getElementById('cancelOrderForm');
            cancelOrderForm.addEventListener('submit', async function(e) {
                
                e.preventDefault();
                
                try {
                    const response = await fetch(this.action, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });

                    if (response.ok) {
                       
                        // Close the modal
                        const modal = bootstrap.Modal.getInstance(document.getElementById('cancelModal'));
                        modal.hide();

                        // Update the order status tracker
                        const tracker = document.querySelector('.order-status-tracker');
                        tracker.dataset.status = 'cancelled';
                        tracker.style.setProperty('--progress-width', '0%');

                        // Reset all steps to faded state
                        const steps = tracker.querySelectorAll('.status-step');
                        steps.forEach(step => {
                            step.classList.remove('active');
                            step.classList.add('faded');
                        });

                        // Add cancelled step if it doesn't exist
                        if (!tracker.querySelector('.status-step.cancelled')) {
                            const cancelledStep = document.createElement('div');
                            cancelledStep.className = 'status-step active cancelled';
                            cancelledStep.innerHTML = `
                                <div class="status-icon">
                                    <i class="fas fa-times-circle"></i>
                                </div>
                                <div class="status-label">Cancelled</div>
                            `;
                            tracker.appendChild(cancelledStep);
                        } else {
                            // Activate the cancelled step
                            const cancelledStep = tracker.querySelector('.status-step.cancelled');
                            cancelledStep.classList.add('active');
                            cancelledStep.classList.remove('faded');
                        }

                        // Remove the cancel button section
                        const actionSection = document.querySelector('.action-section');
                        if (actionSection) {
                            actionSection.remove();
                        }
                    } else {
                        console.error('Failed to cancel order');
                    }
                } catch (error) {
                    console.error('Error:', error);
                }
            });
        });
        function returnOrder() {
            let reason;
            const returnReason = document.getElementById('returnReason').value;
            const errorp=document.getElementById('otherReasonTextError');
            if(returnReason=="other"){
                reason=document.getElementById('otherReasonText').value;
                
                
                if(reason==""){
                    errorp.innerHTML="Please specify your reason for return...";
                    errorp.style.display = 'block';
                    return;
                }
                else if(reason.length<10){
                    errorp.innerHTML="Reason must be at least 10 characters long";
                    errorp.style.display = 'block';
                    return;
                }
            }else{
                if(returnReason==""){
                    errorp.innerHTML="Please select a reason for return...";
                    errorp.style.display = 'block';
                    return;
                }
                reason=returnReason;
            }
            const order = <%- JSON.stringify(order) %>;
            
            const orderid = order._id;
            const productid = order.item.productId;
            const varient = order.item.varient;
            fetch('/user/orders/<%= order._id %>/return', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ orderid, productid, varient, reason })
            }).then(response => response.json())
            .then(data => {
                if (data.status === 'success') {
                    // Close the modal
                    const modal = bootstrap.Modal.getInstance(document.getElementById('returnModal'));
                    modal.hide();
                    
                    // Replace the return button with the pending message
                    const returnButton = document.querySelector('.cancel-btn[data-bs-target="#returnModal"]');
                    const messageDiv = document.createElement('div');
                    messageDiv.className = 'return-status-message';
                    messageDiv.innerHTML = `
                        <i class="fas fa-clock text-warning"></i>
                        <p>Your request for returning this order is being processed. We'll let you know once it gets approved.</p>
                    `;
                    returnButton.replaceWith(messageDiv);
                } else {
                    alert('Failed to request return order');
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
        }

        function toggleOtherReason() {
            const reasonSelect = document.getElementById('returnReason');
            const otherReasonInput = document.getElementById('otherReasonInput');
            
            if (reasonSelect.value === 'other') {
                otherReasonInput.style.display = 'block';
                otherReasonInput.classList.add('show');
            } else {
                otherReasonInput.style.display = 'none';
                otherReasonInput.classList.remove('show');
            }
        }
    </script>
</body>
</html>