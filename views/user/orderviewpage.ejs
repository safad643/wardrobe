<title>Order Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            --primary: #FFD700;  /* Gold */
            --primary-dark: #FFC000;  /* Darker gold for hover */
            --primary-light: #FFF8DC;  /* Light gold for backgrounds */
            --success: #34a853;
            --warning: #fbbc05;
            --danger: #ea4335;
            --dark: #202124;
            --light: #f8f9fa;
            --border-radius: 12px;
            --shadow: 0 4px 20px rgba(0,0,0,0.08);
        }

        html, body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
        }

        body {
            background: #f5f7fa;
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
            color: var(--dark);
            line-height: 1.6;
            display: flex;
            flex-direction: column;
        }

        .order-page-wrapper {
            flex: 1;
            display: flex;
            flex-direction: column;
            min-height: calc(100vh - 80px);
            width: 100vw;
            overflow-x: hidden;
            padding-bottom: 1rem;
            margin-top: 0;
        }

        .order-container {
            flex: 1;
            width: 100vw;
            max-width: none;
            margin: 0;
            padding: 1.5rem;
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 15px;
            background: linear-gradient(to bottom right, #f8f9fa, #e9ecef);
            box-sizing: border-box;
            min-height: 0;
        }

        .left-section, .right-section {
            display: flex;
            flex-direction: column;
            gap: 15px;
            height: auto;
        }

        .order-header {
            background: white;
            border-radius: var(--border-radius);
            padding: 1.2rem;
            box-shadow: var(--shadow);
        }

        .main-title {
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
        }

        .order-meta {
            display: flex;
            gap: 2rem;
            font-size: 0.9rem;
        }

        .product-section {
            width: 100%;
            background: white;
            border-radius: var(--border-radius);
            padding: 1.2rem;
            box-shadow: var(--shadow);
            display: block;
            margin-bottom: 0.8rem;
        }

        .main-image-container {
            height: 280px;
            border-radius: var(--border-radius);
            overflow: hidden;
        }

        .product-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .product-thumbnails {
            display: flex;
            gap: 10px;
            margin-top: 10px;
        }

        .thumbnail {
            width: 60px;
            height: 60px;
            border-radius: 8px;
            object-fit: cover;
            cursor: pointer;
            transition: all 0.2s ease;
            border: 2px solid transparent;
        }

        .product-info {
            padding: 0 1rem;
        }

        .product-name {
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        .price-info {
            margin-bottom: 1rem;
            padding: 1rem;
            border-radius: 12px;
            background: #f8f9fa;
        }

        .current-price {
            font-size: 1.75rem;
            font-weight: 600;
            background: linear-gradient(45deg, #202124, #424242);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .original-price {
            text-decoration: line-through;
            color: #666;
            font-size: 1.1rem;
        }

        .discount-badge {
            background: #e6f4ea;
            color: var(--success);
            padding: 0.5rem 0.75rem;
            border-radius: 6px;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .order-summary {
            background: white;
            border-radius: var(--border-radius);
            padding: 1.2rem;
            box-shadow: var(--shadow);
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.9);
            border: 1px solid rgba(255, 255, 255, 0.2);
            margin-bottom: 1rem;
        }

        .summary-title {
            font-size: 1.1rem;
            margin-bottom: 0.8rem;
            font-weight: 600;
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            padding: 0.75rem 0;
            border-bottom: 1px solid #eee;
        }

        .summary-row.total {
            border-top: 2px solid #eee;
            border-bottom: none;
            margin-top: 0.5rem;
            padding-top: 1rem;
            font-weight: 600;
        }

        .action-section {
            text-align: center;
            padding: 1rem 0;
        }

        .cancel-btn {
            margin: 0 auto;
            display: block;
            width: fit-content;
            background: white;
            color: var(--danger);
            border: 2px solid var(--danger);
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
            z-index: 1;
        }

        .cancel-btn::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            background: var(--danger);
            transform: translate(-50%, -50%);
            border-radius: 50%;
            transition: width 0.6s ease, height 0.6s ease;
            z-index: -1;
        }

        .cancel-btn:hover {
            color: white;
           
            box-shadow: 0 5px 15px rgba(234, 67, 53, 0.3);
        }

        .cancel-btn:hover::before {
            width: 300px;
            height: 300px;
        }

        .cancel-btn i {
            margin-right: 8px;
            transition: transform 0.3s ease;
        }

        .cancel-btn:hover i {
            transform: rotate(180deg);
        }

        @media (max-width: 992px) {
            .order-page-wrapper {
                padding-bottom: 1rem;
            }
            
            .order-container {
                padding: 1rem;
                grid-template-columns: 1fr;
            }
            
            .product-section {
                grid-template-columns: 1fr;
            }

            .order-status-tracker::after {
                width: calc(var(--progress-width) * 0.8);
            }
        }

        .order-status-tracker {
            --progress-width: 0%;
            margin-top: 2rem;
            display: flex;
            justify-content: space-between;
            position: relative;
            padding: 0 1rem;
        }

        .order-status-tracker::before {
            content: '';
            position: absolute;
            top: 25px;
            left: 50px;
            right: 50px;
            height: 2px;
            background: #e0e0e0;
            z-index: 1;
        }

        .order-status-tracker::after {
            content: '';
            position: absolute;
            top: 25px;
            left: 50px;
            width: 0%; /* Start at 0% */
            height: 2px;
            background: var(--success);
            z-index: 1;
            animation: progressLine 3s ease forwards; /* Increased from 1.5s to 3s */
        }

        .status-step {
            display: flex;
            flex-direction: column;
            align-items: center;
            position: relative;
            z-index: 2;
            opacity: 0.5; /* Start faded */
            transition: opacity 0.3s ease;
        }

        .status-icon {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: white;
            border: 2px solid #e0e0e0; /* Start with gray border */
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            color: #e0e0e0; /* Start with gray icon */
            transition: all 0.3s ease;
        }

        .status-label {
            margin-top: 0.5rem;
            font-size: 0.9rem;
            color: #666;
            font-weight: 500;
        }

        .status-step.active .status-icon {
            border-color: var(--success);
            background: var(--success);
            color: white;
            transform: scale(1.1);
            box-shadow: 0 0 15px rgba(52, 168, 83, 0.3);
        }

        .status-step.active .status-label {
            color: var(--success);
            font-weight: 600;
        }

        .status-step.active .status-icon i {
            animation: pulse 1.5s infinite;
        }

        @keyframes pulse {
            0% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.2);
            }
            100% {
                transform: scale(1);
            }
        }

        .product-image:hover {
            transform: scale(1.05);
            transition: transform 0.3s ease;
        }

        .thumbnail:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .thumbnail.active {
            border-color: var(--primary);
            transform: scale(1.1);
        }

        .product-details {
            margin-top: 1.5rem;
        }

        .description-text {
            color: #666;
            line-height: 1.6;
        }

        .cancel-btn {
            transform-origin: center;
            transition: all 0.3s ease;
        }


        /* Make header sticky */
        header.header {
            position: sticky;
            top: 0;
            z-index: 1000;
            background: white;
        }

        .e-commerce-header {
            background: white;
            box-shadow: 0 2px 15px rgba(0,0,0,0.08);
            position: sticky;
            top: 0;
            z-index: 1000;
            padding: 0.5rem 2rem;
        }

        .header-top {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 2rem;
            max-width: 1400px;
            margin: 0 auto;
        }

        .logo-section {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .logo {
            font-size: 1.8rem;
            font-weight: 800;
            color: #333;
            text-decoration: none;
            letter-spacing: 1px;
            background: linear-gradient(45deg, #FFD700, #FFA500);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            transition: transform 0.3s ease;
        }

        .logo:hover {
            transform: scale(1.05);
        }

        .main-nav {
            flex: 1;
        }

        .nav-links {
            display: flex;
            gap: 1.5rem;
            list-style: none;
            margin: 0;
            padding: 0;
        }

        .nav-links a {
            text-decoration: none;
            color: #444;
            font-weight: 500;
            font-size: 0.95rem;
            padding: 0.5rem 0.8rem;
            border-radius: 6px;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.4rem;
