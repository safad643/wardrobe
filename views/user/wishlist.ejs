<%- include('../partials/user/header') %>

<div class="wishlist-container">
    <div class="wishlist-header">
        <h1>My Wishlist (<span class="wishlist-count"><%= products.length %></span>)</h1>
    </div>

    <div class="wishlist-grid">
        <% if (products.length > 0) { %>
            <% products.forEach(product => { %>
                <div class="wishlist-card" data-product-id="<%= product._id %>">
                    <div class="card-image">
                        <a href="/user/product/<%= product.name %>">
                            <img src="<%= product.images[0] %>" alt="<%= product.name %>" loading="lazy" />
                        </a>
                        <button 
                            onclick="removeFromWishlist('<%= product._id %>')" 
                            class="remove-btn"
                            title="Remove from wishlist">
                            <i class="zmdi zmdi-delete"></i>
                        </button>
                    </div>
                    <div class="card-content">
                        <a href="/user/product/<%= product.name %>" class="product-name">
                            <%= product.name %>
                        </a>
                        <div class="pricing">
                            <div class="price-details">
                                <span class="final-price">₹<%= Math.floor(product.price - (product.price * (product.offer || 0)/100)) %></span>
                                <% if (product.offer && product.offer > 0) { %>
                                    <span class="original-price">₹<%= Math.floor(product.price) %></span>
                                    <span class="discount-tag"><%= product.offer %>% off</span>
                                <% } %>
                            </div>
                            <button 
                                onclick="addToCart('<%= product._id %>')" 
                                class="add-to-cart-btn"
                                title="Add to cart">
                                <i class="zmdi zmdi-shopping-cart"></i>
                                <span>Add to Cart</span>
                            </button>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="empty-wishlist">
                <div class="empty-content">
                    <i class="far fa-heart"></i>
                    <h2>Your wishlist is empty</h2>
                    <p>Discover and save items you love to your wishlist</p>
                    <a href="/user/shop" class="continue-shopping">
                        Continue Shopping
                    </a>
                </div>
            </div>
        <% } %>
    </div>
</div>

<div id="customNotification" class="custom-notification">
    <span class="notification-message"></span>
</div>

<style>
:root {
    --primary-color: #2874f0;
    --primary-hover: #2264d1;
    --danger-color: #ff4d4d;
    --text-primary: #333;
    --text-secondary: #666;
    --text-light: #999;
    --bg-light: #f8f8f8;
    --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.08);
    --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.12);
    --radius-sm: 8px;
    --radius-md: 12px;
    --spacing-xs: 0.5rem;
    --spacing-sm: 1rem;
    --spacing-md: 1.5rem;
    --spacing-lg: 2rem;
}

.wishlist-container {
    max-width: 1200px;
    margin: var(--spacing-lg) auto;
    padding: 0 var(--spacing-md);
}

.wishlist-header {
    margin-bottom: var(--spacing-lg);
}

.wishlist-header h1 {
    font-size: 1.75rem;
    color: var(--text-primary);
    font-weight: 600;
}

.wishlist-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--spacing-md);
}

.wishlist-card {
    background: white;
    border-radius: var(--radius-md);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}


.card-image {
    position: relative;
    padding-top: 100%;
    background: var(--bg-light);
}

.card-image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: contain;
    padding: var(--spacing-sm);
}

.remove-btn {
    position: absolute;
    top: var(--spacing-xs);
    right: var(--spacing-xs);
    background: white;
    border: none;
    border-radius: 50%;
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    box-shadow: var(--shadow-sm);
    transition: all 0.2s ease;
}

.remove-btn:hover {
    background: #fff1f1;
    transform: scale(1.1);
}

.remove-btn i {
    color: var(--danger-color);
    font-size: 1.25rem;
}

.card-content {
    padding: var(--spacing-md);
}

.product-name {
    display: block;
    text-decoration: none;
    color: var(--text-primary);
    font-size: 1.1rem;
    font-weight: 500;
    margin-bottom: var(--spacing-sm);
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.product-name:hover {
    color: var(--primary-color);
}

.pricing {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
}

.price-details {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
}

.final-price {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
}

.original-price {
    color: var(--text-light);
    text-decoration: line-through;
    font-size: 0.9rem;
}

.discount-tag {
    background: #e8f5e9;
    color: #2e7d32;
    padding: 0.25rem 0.5rem;
    border-radius: var(--radius-sm);
    font-size: 0.85rem;
    font-weight: 500;
}

.add-to-cart-btn {
    width: 100%;
    padding: var(--spacing-sm);
    background: var(--primary-color);
    color: white;
    border: none;
    border-radius: var(--radius-sm);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-xs);
    font-size: 0.95rem;
    font-weight: 500;
    transition: background 0.2s ease;
}

.add-to-cart-btn:hover {
    background: var(--primary-hover);
}

.empty-wishlist {
    grid-column: 1 / -1;
    text-align: center;
    padding: var(--spacing-lg);
}

.empty-content {
    max-width: 400px;
    margin: 0 auto;
    padding: var(--spacing-lg);
    background: white;
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-sm);
}

.empty-wishlist i {
    font-size: 3.5rem;
    color: var(--text-light);
    margin-bottom: var(--spacing-md);
}

.empty-wishlist h2 {
    font-size: 1.5rem;
    color: var(--text-primary);
    margin-bottom: var(--spacing-xs);
}

.empty-wishlist p {
    color: var(--text-secondary);
    margin-bottom: var(--spacing-lg);
}

.continue-shopping {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0 24px;
    height: 38px;
    background: white;
    color: var(--primary-color);
    text-decoration: none;
    border-radius: var(--radius-sm);
    font-size: 0.95rem;
    font-weight: 500;
    border: 2px solid var(--primary-color);
    transition: all 0.2s ease;
}

.continue-shopping:hover {
    background: var(--primary-color);
    color: white;
    transform: translateY(-1px);
}

.continue-shopping:active {
    transform: translateY(0);
}

@media (max-width: 768px) {
    .wishlist-container {
        padding: 0 var(--spacing-sm);
    }
    
    .wishlist-grid {
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    }
}

@media (max-width: 480px) {
    .wishlist-grid {
        grid-template-columns: 1fr;
    }
}

.custom-notification {
    position: fixed;
    bottom: -100px;
    left: 50%;
    transform: translateX(-50%);
    background-color: #4CAF50;
    color: white;
    padding: 15px 30px;
    border-radius: 25px;
    font-family: Arial, sans-serif;
    font-size: 16px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    opacity: 0;
    visibility: hidden;
    transition: all 0.4s ease-out;
    z-index: 9999;
    display: flex;
    align-items: center;
    gap: 10px;
}

.custom-notification.active {
    bottom: 20px;
    opacity: 1;
    visibility: visible;
}

.custom-notification::before {
    content: '✓';
    font-weight: bold;
    font-size: 18px;
}
</style>

<script>
async function removeFromWishlist(productId) {
    try {
        const response = await fetch(`/user/wishlist/remove/${productId}`, {
            method: 'DELETE'
        });
        
        if (response.ok) {
            const card = document.querySelector(`[data-product-id="${productId}"]`);
            card.style.animation = 'fadeOut 0.3s ease';
            setTimeout(() => {
                card.remove();
                updateWishlistCount();
                checkEmptyWishlist();
            }, 300);
        }
    } catch (error) {
        console.error('Error removing from wishlist:', error);
        showToast('Failed to remove item from wishlist');
    }
}

async function addToCart(productId) {
    try {
        const response = await fetch('/user/addtocart', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                productid: productId,
                

            })
        });
        
        if (response.ok) {
            showToast('Item added to cart successfully');
            await removeFromWishlist(productId);
        }
    } catch (error) {
        console.error('Error adding to cart:', error);
        showToast('Failed to add item to cart');
    }
}

function updateWishlistCount() {
    const count = document.querySelectorAll('.wishlist-card').length;
    document.querySelector('.wishlist-count').textContent = count;
}

function checkEmptyWishlist() {
    const wishlistGrid = document.querySelector('.wishlist-grid');
    if (document.querySelectorAll('.wishlist-card').length === 0) {
        wishlistGrid.innerHTML = `
            <div class="empty-wishlist">
                <div class="empty-content">
                    <i class="far fa-heart"></i>
                    <h2>Your wishlist is empty</h2>
                    <p>Discover and save items you love to your wishlist</p>
                    <a href="/user/shop" class="continue-shopping">
                        Continue Shopping
                    </a>
                </div>
            </div>
        `;
    }
}

function showToast(message) {
    const notification = document.getElementById('customNotification');
    const messageElement = notification.querySelector('.notification-message');
    
    messageElement.textContent = message;
    notification.classList.add('active');
    
    // Hide after 2 seconds
    setTimeout(() => {
        notification.classList.remove('active');
    }, 2000);
}
</script>

